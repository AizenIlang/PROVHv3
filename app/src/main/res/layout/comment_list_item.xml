<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="312dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical"
            android:padding="5dp">

            <TextView
                android:id="@+id/comment_list_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name LastName"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:id="@+id/comment_list_item_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:elevation="3dp"
                android:text="Test Comments Test Comments Test Comments Test Comments Test Comments" />

            <RatingBar
                android:id="@+id/comment_list_item_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:max="5"
                style="@style/Widget.AppCompat.RatingBar.Small"
                android:layout_gravity="end"/>
        </LinearLayout>


    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>