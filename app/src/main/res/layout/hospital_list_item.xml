<?xml version="1.0" encoding="utf-8"?>
<android.support.design.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginRight="5dp"
    android:layout_marginLeft="5dp"
    android:layout_marginTop="10dp"
    app:cardElevation="5dp"
    app:cardCornerRadius="5dp">


    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        >
        <ImageView
            android:id="@+id/hospital_list_item_imageview"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/mandaluyong_hospital"
            android:elevation="5dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="30dp"

            >
            <TextView
                android:id="@+id/hospital_list_item_Name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="MANDALUYONG HOSPITAL"
                android:textStyle="bold"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/hospital_list_item_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Some content in here"
                android:textStyle="normal"
                android:textSize="12sp"/>

            <RatingBar

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:id="@+id/hospital_list_item_rating"
                style="?android:attr/ratingBarStyleIndicator"
                android:scaleX=".5"
                android:rating="4"
                android:scaleY=".5"
                android:transformPivotX="0dp"
                android:transformPivotY="0dp"
                android:max="5"
                android:clickable="false"/>

            <TextView
                android:id="@+id/hospital_list_item_city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="City of Mandaluyong"
                android:textStyle="normal"
                android:textSize="12sp"/>


        </LinearLayout>

    </android.support.v7.widget.LinearLayoutCompat>
</android.support.design.card.MaterialCardView>