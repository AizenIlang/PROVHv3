<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginRight="5dp"
    android:layout_marginLeft="5dp"
    android:layout_marginTop="10dp"
    android:id="@+id/hospital_list_item_cardview"
    android:transitionName="hospital_cardview"
    app:cardElevation="1dp"
    app:cardCornerRadius="1dp"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingTop="10dp">

        <ImageView
            android:id="@+id/hospital_list_item_imageview"

            android:layout_width="87dp"
            android:layout_height="87dp"
            android:layout_marginStart="8dp"
            android:contentDescription="@string/hopsital_image"
            app:srcCompat="@color/browser_actions_title_color" />

        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/hospital_list_item_Name"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/raleway_fontfamily"
                android:text="@string/name_of_the_hospital"
                android:textColor="#000000"
                android:textSize="12sp"
                android:typeface="normal" />

            <TextView
                android:id="@+id/hospital_list_item_city"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/raleway_fontfamily"
                android:text="@string/name_of_the_hospital"
                android:textColor="#000000"
                android:textSize="12sp"
                android:typeface="normal" />

            <TextView
                android:id="@+id/hospital_list_item_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/raleway_fontfamily"
                android:text="@string/name_of_the_hospital"
                android:textColor="#000000"
                android:textSize="12sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/hospital_list_item_phone"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/raleway_fontfamily"
                android:text="@string/name_of_the_hospital"
                android:textColor="#000000"
                android:textSize="12sp"
                android:textStyle="italic" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Distance"
                android:textSize="10sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/hospital_list_item_map_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="10sp" />


            />
        </LinearLayout>
    </LinearLayout>








</LinearLayout>